---
import { getCollection } from 'astro:content';
import { StaggerTestimonials } from '@/components/stagger-testemonials';
import { AuroraText } from '@/components/ui/aurora-text';
import { ShimmerButton } from './ui/shimmer-button';

const testimonials = await getCollection('references');
---

<section>
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <div class="py-12 md:py-28 md:pb-20">
      <h1 class="text-center text-4xl font-extrabold">
        Podívejte se na mé <AuroraText className="font-cabinet-grotesk">reference</AuroraText>
      </h1>
      <div
        class="flex w-full items-center justify-center [mask-image:_linear-gradient(to_right,transparent_0,_black_28%,_black_calc(100%-28%),transparent_100%)]"
      >
        <StaggerTestimonials client:load testimonials={testimonials} />
      </div>
      <div class="flex w-full items-center justify-center mt-4">
        <a href="/reference">
          <ShimmerButton> Více referencí </ShimmerButton>
        </a>
      </div>
    </div>
  </div>
</section>
