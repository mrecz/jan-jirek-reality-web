          {/* Image */}
          <div class="flex justify-center mb-6" data-aos="fade-up" data-aos-delay="100">
            <div class="relative">
              <Image
                class="absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 pointer-events-none -z-10 max-w-none mix-blend-lighten"
