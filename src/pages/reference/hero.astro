---
import { Image } from 'astro:assets';
import BGImage from '@/assets/images/bg-estates.jpg';
---

<section class="relative">
  <!-- Background image -->
  <div class="-z-1 absolute inset-0 box-content h-screen pt-16">
    <Image
      class="absolute inset-0 h-full w-full object-cover opacity-25"
      src={BGImage}
      width={1920}
      height={1080}
      alt="Background image"
    />
    <div class="absolute inset-0 bg-linear-to-t from-white" aria-hidden="true"></div>
  </div>
  <div class="relative mx-auto max-w-3xl px-4 sm:px-6">
    <div class="pb-12 pt-32 md:pb-16 md:pt-40">
      <div class="max-w-3xl">
        <article>
          <header>
            <!-- Title and excerpt -->
            <div class="text-center">
              <h1
                class="mb-6 border-y font-cabinet-grotesk text-5xl font-bold [border-image:linear-gradient(to_right,transparent,--theme(--color-slate-300/.8),transparent)1] md:text-6xl"
              >
                Co o mně říkají moji klienti
              </h1>
            </div>
          </header>
        </article>
      </div>
    </div>
  </div>
</section>
