---
import PageIllustration from "@/components/page-illustration.astro";
---

<section class="relative">
  <PageIllustration />
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <!-- Main content -->
    <div class="mx-auto max-w-3xl pt-32 pb-12 md:pt-40 md:pb-20">
      <!-- Section header -->
      <div class="pb-10 text-center">
        <h1 class="font-cabinet-grotesk mb-6 border-y text-5xl font-bold [border-image:linear-gradient(to_right,transparent,--theme(--color-slate-300/.8),transparent)1] md:text-6xl">
          Podívejte se, s čím vám můžu pomoci
        </h1>
      </div>
    </div>
  </div>
</section> 